{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WizMini",
  "version": "0.1.0",
  "identifier": "com.example.wizmini",
  "build": {
    "beforeDevCommand": "npm run dev --workspace @wizmini/desktop-ui",
    "beforeBuildCommand": "npm run build --workspace @wizmini/desktop-ui",
    "frontendDist": "../src-ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "WizMini",
        "label": "main",
        "width": 980,
        "height": 560,
        "resizable": false,
        "maximizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
